{
  "compilerOptions": {
    "target": "ES2020", // Version ECMAScript cible
    "module": "CommonJS", // Utilisation des modules CommonJS pour Node.js
    "moduleResolution": "Node", // Résolution des modules Node.js
    "strict": true, // Activer les vérifications strictes
    "esModuleInterop": true, // Interopérabilité avec les modules CommonJS
    "skipLibCheck": true, // Ignorer la vérification des types des fichiers de bibliothèque
    "declaration": true, // Générer des fichiers de déclaration .d.ts
    "outDir": "dist", // Répertoire de sortie
    "sourceMap": false // Générer des fichiers source map
  },
  "include": ["src/nativeTranformer.ts"], // Inclure tous les fichiers TypeScript dans src
  "exclude": ["node_modules", "dist"] // Exclure les répertoires non pertinents
}